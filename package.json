{
  "name": "github-action",
  "version": "1.0.0",
  "description": "A GitHub Action built with JavaScript",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && ncc build -o dist/setup src/setup.js && ncc build -o dist/shutdown src/shutdown.js",
    "prepare": "npm run build",
    "orbit:setup": "node dist/setup/index.js",
    "orbit:shutdown": "node dist/shutdown/index.js",
    "test": "jest",
    "lint": "eslint ."
  },
  "keywords": [
    "GitHub",
    "Actions"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@actions/tool-cache": "^2.0.1",
    "pnpm": "^10.4.1",
    "tar": "^6.2.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.20.1",
    "jest": "^29.7.0"
  }
}
